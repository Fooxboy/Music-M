<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VK_UI3.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VK_UI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:custom="using:VK_UI3.Controls"
    mc:Ignorable="d"
    >

    <Grid>
        <ListView Padding="0,16,0,16" AllowDrop="True"  CanReorderItems="false" x:Name="TrackListView" ItemsSource="{x:Bind userAudio.listAudio, Mode=OneWay}"   IsItemClickEnabled="False" SelectionMode="None"   IncrementalLoadingTrigger="Edge"
    IncrementalLoadingThreshold="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <custom:TrackControl
                        FocusVisualPrimaryBrush="Transparent"
                        FocusVisualSecondaryThickness="0"
                           Margin="0,0,0,4"
                     ></custom:TrackControl>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
