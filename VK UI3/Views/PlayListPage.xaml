<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VK_UI3.Views.PlayListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VK_UI3.Views"
    xmlns:custom="using:VK_UI3.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>
    <Page.Shadow>
        <ThemeShadow />
    </Page.Shadow>
    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow" />
    </Page.Resources>
    <ListView Padding="0,0,0,16"  CanReorderItems="false" x:Name="TrackListView" ItemsSource="{x:Bind vkGetAudio.listAudio, Mode=OneWay}"   IsItemClickEnabled="False" SelectionMode="None">
        <ListView.Header>
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <!-- Квадратный элемент в первом столбце -->
                        <Grid  Width="250" Height="250"
    Translation="0,0,24"
    
    CornerRadius="8" Margin="0,0,8,0" Background="{ThemeResource LayerOnAccentAcrylicFillColorDefaultBrush}" Grid.Column="0">
                            <FontIcon Glyph="&#xE90B;" />
                            <Image x:Name="ImageThumb" Stretch="UniformToFill"
         Width="250" Height="250"></Image>
                        </Grid>

                        <!-- Элемент, заполняющий оставшееся пространство во втором столбце -->
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <ScrollViewer Margin="0,30,20,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center" 
            
                  HorizontalScrollBarVisibility="Hidden"
                  VerticalScrollBarVisibility="Hidden"
                  MaxWidth="550">
                                <TextBlock x:Name="textBlock"
                   MaxWidth="{Binding ElementName=CardPlaylist, Path=ActualWidth}"
                   FontFamily="{StaticResource VKSansBold}"
                   FontSize="40"
                   FontWeight="ExtraBlack"
                   
                   Text="{Binding Title}" />
                            </ScrollViewer>

                            <TextBlock 
        x:Name="textBlock1"
        Margin="0,10,0,0"
        FontFamily="{StaticResource VKSansRegular}"
        FontSize="22"
        
        Opacity="0.8"
        Text="{Binding ArtistText}"
        TextTrimming="CharacterEllipsis" />
                            <StackPanel Grid.Column="1"
        x:Name="AddInfo"
        Margin="0,10,0,0"
        Opacity="0.5"
        Orientation="Horizontal"
        Visibility="{Binding Path=VisibileAddInfo}">

                                <TextBlock
            x:Name="Genres"
            FontFamily="{StaticResource VKSansRegular}"
            
            Text="{Binding Genres}" />
                                <TextBlock
            x:Name="Dot2"
            Margin="3,0,0,0"
            
            Text="•" />
                                <TextBlock
            x:Name="Year"
            Margin="3,0,0,0"
            FontFamily="{StaticResource VKSansRegular}"
            
            Text="{Binding Year}" />
                                <TextBlock
            x:Name="Dot3"
            Margin="3,0,0,0"
            
            Text="•" />
                                <TextBlock
            x:Name="Plays"
            Margin="3,0,0,0"
            FontFamily="{StaticResource VKSansRegular}"
            
            Text="{Binding Plays}" />
                                <TextBlock
            x:Name="PlaysText"
            Margin="3,0,0,0"
            
            Text="прослушиваний" />
                            </StackPanel>

                            <StackPanel
        x:Name="stackPanel"
        Margin="0,50,0,0"
        Orientation="Horizontal"
        RenderTransformOrigin="0.5,0.5">
                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </StackPanel.RenderTransform>
                                <Button
    x:Name="AddPlaylist"
    MinWidth="200"
   
    Click="AddPlaylist_Click">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <SymbolIcon Symbol="Add"/>
                                            <TextBlock Text="Добавить к себе" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button
    x:Name="PlayPlaylist"
    MinWidth="150"
    Margin="10,0,0,0"

    Click="PlayPlaylist_Click">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <SymbolIcon Symbol="Play"/>
                                            <TextBlock Text="Воспроизвести" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <Button
    x:Name="EditPlaylist"
    MinWidth="150"
    Margin="10,0,0,0"

    Click="EditPlaylist_Click">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <SymbolIcon Symbol="Edit"/>
                                            <TextBlock Text="Редактировать" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <Button
    x:Name="DownloadPlaylist"
    MinWidth="120"
    Margin="10,0,0,0"

    Click="DownloadPlaylist_Click">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <SymbolIcon Symbol="Download"/>
                                            <TextBlock Text="Скачать" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>



                            </StackPanel>

                            <TextBlock x:Name="__"
               Margin="0,10,0,0" 
               
               Opacity="0.6"
               MaxWidth="550"
               TextWrapping="Wrap"
             />
                        </StackPanel>
                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <custom:TrackControl
                    FocusVisualPrimaryBrush="Transparent"
                    FocusVisualSecondaryThickness="0"
                       Margin="0,0,0,8"
                 ></custom:TrackControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Footer>
                    <ProgressRing x:Name="LoadingIndicator" IsActive="False" />
                </ListView.Footer>
            </ListView>
  
</Page>
